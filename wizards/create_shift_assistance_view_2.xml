        <record id="create_shift_assistance_record" model="ir.actions.act_window">
                <field name="name">Assign employee shift</field>
                <field name="res_model">hr.assistance.set.shift</field>
                <field name="src_model">hr.employee</field>
                <field name="view_type">form</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
        </record>
	
	<menuitem
		id="wizard_shift_hr"
		action="create_shift_assistance_record"

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
<record model="ir.ui.view" id="create_shift_assitance_form_view">
                <field name="name">hr.assistance.set.shift.form</field>
                <field name="model">hr.assistance.set.shift</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                <form string="Report">
                <p>Chose employee</p>
                <group>
                        <field name="employee_id"/>
                        <field name="shift"/>
                </group>
                <p>Chose dates</p>
                <group col='4' string='Dates'>
                        <field name="date_start" />
                        <field name="date_end" />
                </group>
                <footer>
                        <button
                                name="create_assigned_shift"
                                string="Crear"
                                type="object"
                                class="oe_highlight"/>
                                or
                        <button
                                string="Cancel"
                                class="oe_link"
                                special="cancel"/>
                </footer>
                </form>
                </field>
        </record>


	<record model="ir.ui.view" id="create_shift_assitance_form_view">
		<field name="name">hr.assistance.set.shift.form</field>
		<field name="model">hr.assistance.set.shift</field>
		<field name="arch" type="xml">
		<form string="Report">
		<h2>Chose employee</h2>
		<group>
			<field name="employee_id"/>
		</group>
		<h2>Chose dates</h2>
		<group col='4'>
			<field name="date_start" />
			<field name="date_end" />
		</group>
		<footer>
			<button
				name="print_report"
				string="Informe"
				type="object"
				class="oe_highlight"/>
				or
			<button
				string="Cancel"
				class="oe_link"
				special="cancel"/>
		</footer>
		</form>
		</field>
	</record>

	<action name="Crear calendario turno"
		res_model="hr.assistance.set.shift"
		src_model="hr.employee"
		view_mode="form"
		target="new"
		view_id="create_shift_assitance_form_view"
		id="crete_shift_assitance_action"
		key2="client_action_multi"/>

	<record id="create_shift_assistance_record" model="ir.actions.act_window">
		<field name="name">Report singin period</field>
		<field name="res_model">hr.assistance.set.shift</field>
		<field name="src_model">hr.employee</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

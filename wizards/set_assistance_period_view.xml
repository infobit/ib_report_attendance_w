	<record model="ir.ui.view" id="set_assistance_period_form_view">
		<field name="name">assistance.report.form</field>
		<field name="model">assistance.set.period</field>
		<field name="arch" type="xml">
		<form string="Report">
		<h2>Chose employee</h2>
		<group>
			<field name="employee_id"/>
		</group>
		<h2>Chose dates</h2>
		<group col='4'>
			<field name="date_start" />
			<field name="date_end" />
		</group>
		<footer>
			<button
				name="print_report"
				string="Informe"
				type="object"
				class="oe_highlight"/>
				or
			<button
				string="Cancel"
				class="oe_link"
				special="cancel"/>
		</footer>
		</form>
		</field>
	</record>

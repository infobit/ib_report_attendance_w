<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="employee_shift_form" model="ir.ui.view">
            <field name="name">hr.employee.report.info.form</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
			<xpath expr="//page[@string='Personal Information']//group[@string='Contact Information']" position="after">
	                    <group string="Holyday's">
        	                <field name="holiday_old"/>
                	        <field name="holiday_new"/>
	                    </group>
			</xpath>
            </field>
       </record>
    </data>
</openerp>

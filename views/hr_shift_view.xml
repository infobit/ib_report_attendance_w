<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shift_form" model="ir.ui.view">
		<field name="name">hr.shift.form</field>
		<field name="model">hr.shift</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
		<form string="Shift employee" version="7.0">
			<sheet>
				<group col="2"  colspan="2"> 
	                                <field name="sequence"/>
	                                <field name="name"/>
	                                <field name="start" widget="float_time"/>
	                                <field name="end" widget="float_time"/>
	                                <field name="lunch"/>
	                                <field name="lunch_start" attrs="{'invisible':[('lunch', '!=', True)]}" widget="float_time"/>
	                                <field name="lunch_end" attrs="{'invisible':[('lunch', '!=', True)]}" widget="float_time"/>
	                                <field name="meal"/>
	                                <field name="meal_start" attrs="{'invisible':[('meal', '!=', True)]}" widget="float_time"/>
	                                <field name="meal_end" attrs="{'invisible':[('meal', '!=', True)]}" widget="float_time"/>
				</group>
				<group string="Days of week" col="6">
	                                <field name="monday"/>	
	                                <field name="tuesday"/>	
	                                <field name="wednesday"/>	
	                                <field name="thursday"/>	
	                                <field name="friday"/>	
	                                <field name="saturday"/>	
	                                <field name="sunday"/>	
				</group>
			</sheet>
		</form>
		</field>
	</record>

	<record id="view_shift_tree" model="ir.ui.view">
		<field name="name">hr.shift.tree</field>
		<field name="model">hr.shift</field>
		<!--<field name="type">tree</field>-->
		<field name="arch" type="xml">
			<tree string="shift employee">
                                <field name="sequence"/>
                                <field name="name"/>
				<field name="start"/>
				<field name="end"/>
				<field name="lunch"/>
				<field name="lunch_start"/>
				<field name="lunch_end"/>
				<field name="meal"/>
				<field name="meal_start"/>
				<field name="meal_end"/>
			</tree>
		</field>
	</record>

	<record id="open_view_shift_employee" model="ir.actions.act_window">
            <field name="name">Shift employee</field>
            <field name="res_model">hr.shift</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
		
		
	<menuitem id="id_shift" parent="hr.menu_hr_root" sequence="14" name="Shift"/>		
	<menuitem id="id_add_shift_employee" parent="id_shift" name="Shift employee" action="open_view_shift_employee" />	

        
     </data>
</odoo>
